set nocompatible
syntax enable
set encoding=utf-8
set showcmd
filetype plugin indent on

" Show line numbers
set nu
colorscheme koehler

set nowrap          " No text wrapping
set tabstop=4 shiftwidth=4 expandtab    " Tab inserts 4 spaces
set backspace=indent,eol,start  " Backspace through everything

set hlsearch
set incsearch
set ignorecase
set smartcase

noremap <Up> <nop>
noremap <Down> <nop>
noremap <Left> <nop>
noremap <Right> <nop>
